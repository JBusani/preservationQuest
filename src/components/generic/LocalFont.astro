---
import { join } from "node:path";
import { AstroFont } from "astro-font";

const appDir = process.cwd();
const getFontPath = (name: string) => join(appDir, "public", "fonts", name);
---

<AstroFont
  config={[
    {
      name: "Degular Display",
      display: "swap",
      selector: ".degularDisplayRegular",
      fallback: "sans-serif",
      src: [
      {
          style: "normal",
          path: getFontPath("DegularDisplay-Regular.ttf"),
        }  
      ],
      cssVariable: "degular-regular-font"
    },
    {
      name: "Degular Display Bold",
      display: "swap",
      selector: ".degularDisplayBold",
      fallback: "sans-serif",
      src: [
      {
          style: "normal",
          path: getFontPath("DegularDisplay-Bold.ttf"),
        }  
      ],
      cssVariable: "degular-bold-font"
    },
    {
      name: "Mono Space",
      display: "swap",
      selector: ".monospace",
      fallback: "sans-serif",
      src: [
      {
          weight: '400',
          style: "normal",
          path: getFontPath("SpaceMono-Regular.ttf"),
        }  
      ],
      cssVariable: "monospace-font"
    },
    
  ]}
/>
